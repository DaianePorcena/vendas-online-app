{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "types": ["@types/styled-components-react-native"],
    "baseUrl": ".", // Define a base para resolução de módulos
    "paths": {
      "@assets/*": ["src/assets/*"] // Permite o uso do alias @assets
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "declarations.d.ts"],
  "exclude": ["node_modules", "build", "dist"]
}
